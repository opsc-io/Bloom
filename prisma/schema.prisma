// Try Prisma Accelerate: https://pris.ly/cli/accelerate-init

generator client {
  provider               = "prisma-client"
  output                 = "../src/generated/prisma"
  moduleFormat           = "esm"
  generatedFileExtension = "ts"
  importFileExtension    = "ts"
}

datasource db {
  provider = "cockroachdb"
}

model User {
  id            String    @id
  firstname     String
  lastname      String
  email         String
  emailVerified Boolean   @default(false)
  image         String?
  bio           String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  sessions      Session[]
  accounts      Account[]

  conversationParticipants ConversationParticipant[]
  messages                 Message[]
  messageReactions         MessageReaction[]

  role UserRole @default(UNSET)
  name String

  paymentMethods    PaymentMethod[]
  payments          Payment[]
  claimsAsPatient   Claim[]         @relation("ClaimPatient")
  claimsAsTherapist Claim[]         @relation("ClaimTherapist")

  appointmentsAsTherapist Appointment[] @relation("AppointmentTherapist")
  appointmentsAsPatient   Appointment[] @relation("AppointmentPatient")

  appointmentNotes AppointmentNote[] @relation("AppointmentNoteAuthor")
  waitlistRequests WaitlistEntry[]   @relation("WaitlistPatient")
  waitlistOffers   WaitlistEntry[]   @relation("WaitlistTherapist")

  fileAssetsOwned    FileAsset[] @relation("FileOwner")
  fileAssetsUploaded FileAsset[] @relation("FileUploader")
  fileSharesReceived FileShare[] @relation("FileShareRecipient")

  therapistProfile      TherapistProfile?
  patientMedicalProfile PatientMedicalProfile?

  supportTicketsCreated  SupportTicket[] @relation("TicketCreator")
  supportTicketsAssigned SupportTicket[] @relation("TicketAssignee")

  // 2FA fields
  twoFactorEnabled Boolean?    @default(false)
  twofactors       TwoFactor[]

  therapist     Boolean?
  administrator Boolean?

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@index([identifier])
  @@map("verification")
}

model Log {
  id        String   @id
  level     String
  userId    String?
  message   String
  meta      String?
  timestamp DateTime @default(now())

  @@map("logs")
}

// Roles (if not already in User)

enum UserRole {
  THERAPIST
  PATIENT
  ADMINISTRATOR
  UNSET
}

// Conversations

model Conversation {
  id            String                    @id @default(cuid())
  createdAt     DateTime                  @default(now())
  updatedAt     DateTime                  @updatedAt
  lastMessageAt DateTime?
  participants  ConversationParticipant[]
  messages      Message[]

  @@index([lastMessageAt])
}

// Link users to conversations

model ConversationParticipant {
  id             String   @id @default(cuid())
  conversationId String
  userId         String
  role           UserRole
  joinedAt       DateTime @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([conversationId, userId])
  @@index([userId, role])
}

// Messages (persisted)

model Message {
  id             String              @id @default(cuid())
  conversationId String
  senderId       String
  body           String?
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt
  edited         Boolean             @default(false)
  attachments    MessageAttachment[]
  reactions      MessageReaction[]
  // delivery receipts can be tracked in Redis for speed; store to DB if you need history

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender       User         @relation(fields: [senderId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
}

// File uploads

model MessageAttachment {
  id        String @id @default(cuid())
  messageId String
  url       String
  fileName  String
  mimeType  String
  sizeBytes Int

  message Message @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@index([messageId])
}

// Emoji reactions

model MessageReaction {
  id        String @id @default(cuid())
  messageId String
  userId    String
  emoji     String // shortcode or Unicode

  message Message @relation(fields: [messageId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([messageId, userId, emoji])
}

// Payments and claims

enum PaymentMethodType {
  CARD
  BANK_TRANSFER
  FSA
  HSA
}

enum PaymentStatus {
  PENDING
  SUCCEEDED
  FAILED
  REFUNDED
}

enum ClaimStatus {
  DRAFT
  SUBMITTED
  REJECTED
  APPROVED
  PAID
}

enum ClaimPayer {
  OPTUM
  CLEARING_HOUSE
  OTHER
}

model PaymentMethod {
  id                    String            @id @default(cuid())
  userId                String
  type                  PaymentMethodType
  brand                 String?
  last4                 String?
  expMonth              Int?
  expYear               Int?
  stripePaymentMethodId String?
  isDefault             Boolean           @default(false)
  createdAt             DateTime          @default(now())
  updatedAt             DateTime          @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([stripePaymentMethodId])
}

model Payment {
  id                    String        @id @default(cuid())
  userId                String
  amountCents           Int
  currency              String        @default("usd")
  status                PaymentStatus @default(PENDING)
  stripePaymentIntentId String?
  stripeChargeId        String?
  description           String?
  metadata              Json?
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([stripePaymentIntentId])
}

model Claim {
  id              String      @id @default(cuid())
  patientId       String
  therapistId     String
  appointmentId   String?
  payer           ClaimPayer  @default(OTHER)
  status          ClaimStatus @default(DRAFT)
  submittedAt     DateTime?
  responseCode    String?
  rejectionReason String?
  externalClaimId String?
  metadata        Json?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  patient     User         @relation("ClaimPatient", fields: [patientId], references: [id], onDelete: Cascade)
  therapist   User         @relation("ClaimTherapist", fields: [therapistId], references: [id], onDelete: Cascade)
  appointment Appointment? @relation(fields: [appointmentId], references: [id], onDelete: SetNull)

  @@index([patientId])
  @@index([therapistId])
  @@index([status])
  @@index([externalClaimId])
}

// Appointments and waitlist

enum AppointmentStatus {
  SCHEDULED
  COMPLETED
  CANCELLED
  NO_SHOW
}

model Appointment {
  id            String            @id @default(cuid())
  therapistId   String
  patientId     String
  startAt       DateTime
  endAt         DateTime
  status        AppointmentStatus @default(SCHEDULED)
  zoomMeetingId String?
  zoomJoinUrl   String?
  zoomStartUrl  String?
  notes         AppointmentNote[]
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  therapist User    @relation("AppointmentTherapist", fields: [therapistId], references: [id], onDelete: Cascade)
  patient   User    @relation("AppointmentPatient", fields: [patientId], references: [id], onDelete: Cascade)
  claims    Claim[]

  @@index([therapistId, startAt])
  @@index([patientId, startAt])
  @@index([status])
}

model AppointmentNote {
  id             String   @id @default(cuid())
  appointmentId  String
  authorId       String
  content        String
  previousNoteId String?  @unique
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  appointment Appointment      @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
  author      User             @relation("AppointmentNoteAuthor", fields: [authorId], references: [id], onDelete: Cascade)
  previous    AppointmentNote? @relation("PreviousAppointmentNote", fields: [previousNoteId], references: [id], onDelete: SetNull)
  next        AppointmentNote? @relation("PreviousAppointmentNote")

  @@index([appointmentId])
  @@index([authorId])
}

enum WaitlistStatus {
  REQUESTED
  OFFERED
  ACCEPTED
  DECLINED
  CANCELLED
}

model WaitlistEntry {
  id            String         @id @default(cuid())
  patientId     String
  therapistId   String
  desiredAfter  DateTime?
  desiredBefore DateTime?
  status        WaitlistStatus @default(REQUESTED)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  patient   User @relation("WaitlistPatient", fields: [patientId], references: [id], onDelete: Cascade)
  therapist User @relation("WaitlistTherapist", fields: [therapistId], references: [id], onDelete: Cascade)

  @@index([patientId])
  @@index([therapistId])
  @@index([status])
}

// File sharing

enum FileAccessLevel {
  VIEW
  EDIT
}

model FileAsset {
  id         String   @id @default(cuid())
  ownerId    String
  uploadedBy String
  fileName   String
  mimeType   String
  sizeBytes  Int
  url        String
  metadata   Json?
  createdAt  DateTime @default(now())

  owner           User                 @relation("FileOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  uploader        User                 @relation("FileUploader", fields: [uploadedBy], references: [id], onDelete: Cascade)
  shares          FileShare[]
  extractions     DocumentExtraction[]
  ticketDocuments TicketDocument[]

  @@index([ownerId])
  @@index([uploadedBy])
}

model FileShare {
  id           String          @id @default(cuid())
  fileId       String
  sharedWithId String
  accessLevel  FileAccessLevel @default(VIEW)
  createdAt    DateTime        @default(now())

  file       FileAsset @relation(fields: [fileId], references: [id], onDelete: Cascade)
  sharedWith User      @relation("FileShareRecipient", fields: [sharedWithId], references: [id], onDelete: Cascade)

  @@unique([fileId, sharedWithId])
}

// Profiles

model TherapistProfile {
  id                   String   @id @default(cuid())
  userId               String   @unique
  bio                  String?
  specialties          String?
  credentials          String?
  acceptsNewPatients   Boolean  @default(false)
  publicProfileEnabled Boolean  @default(false)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PatientMedicalProfile {
  id          String   @id @default(cuid())
  patientId   String   @unique
  conditions  String?
  medications String?
  allergies   String?
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  patient User @relation(fields: [patientId], references: [id], onDelete: Cascade)
}

// Admin support and ticketing

enum TicketStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

enum TicketPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

model SupportTicket {
  id           String           @id @default(cuid())
  createdById  String
  assignedToId String?
  subject      String
  description  String
  status       TicketStatus     @default(OPEN)
  priority     TicketPriority   @default(MEDIUM)
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  documents    TicketDocument[]

  createdBy  User  @relation("TicketCreator", fields: [createdById], references: [id], onDelete: Cascade)
  assignedTo User? @relation("TicketAssignee", fields: [assignedToId], references: [id], onDelete: SetNull)

  @@index([status])
  @@index([priority])
  @@index([createdById])
}

model TicketDocument {
  id        String   @id @default(cuid())
  ticketId  String
  fileId    String
  createdAt DateTime @default(now())

  ticket SupportTicket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  file   FileAsset     @relation(fields: [fileId], references: [id], onDelete: Cascade)

  @@unique([ticketId, fileId])
  @@index([fileId])
}

// Document processing for extraction

enum DocumentExtractionStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

model DocumentExtraction {
  id             String                   @id @default(cuid())
  fileId         String
  status         DocumentExtractionStatus @default(PENDING)
  extractedText  String?
  structuredData Json?
  errorMessage   String?
  createdAt      DateTime                 @default(now())
  updatedAt      DateTime                 @updatedAt

  file FileAsset @relation(fields: [fileId], references: [id], onDelete: Cascade)

  @@index([fileId])
  @@index([status])
}

model TwoFactor {
  id          String  @id
  secret      String?
  backupCodes String?
  userId      String  @unique
  user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([secret])
  @@index([userId])
  @@map("twoFactor")
}
